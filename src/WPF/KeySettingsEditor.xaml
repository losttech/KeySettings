<UserControl x:Class="LostTech.App.KeySettingsEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:app="clr-namespace:LostTech.App"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="450">
    <ListView>
        <ListView.View>
            <GridView>
                <GridViewColumn Header="Command" Width="300" DisplayMemberBinding="{Binding CommandName}"/>
                <GridViewColumn Header="Shortcut" Width="Auto">
                    <GridViewColumn.CellTemplate>
                        <DataTemplate>
                            <app:KeyboardShortcutBox Shortcut="{Binding Shortcut}"/>
                        </DataTemplate>
                    </GridViewColumn.CellTemplate>
                </GridViewColumn>
            </GridView>
        </ListView.View>
    </ListView>
</UserControl>
